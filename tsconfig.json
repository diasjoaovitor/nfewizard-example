{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@Adapters/*": ["node_modules/nfewizard-io/src/adapters/*"],
      "@Modules/*": ["node_modules/nfewizard-io/src/modules/*"],
      "@Interfaces/*": ["node_modules/nfewizard-io/src/core/interfaces/*"],
      "@Interfaces": ["node_modules/nfewizard-io/src/core/interfaces/index"],
      "@Types/*": ["node_modules/nfewizard-io/src/core/types/*"],
      "@Types": ["node_modules/nfewizard-io/src/core/types/index"],
      "@Core/*": ["node_modules/nfewizard-io/src/core/*"],
      "@Utils/*": ["node_modules/nfewizard-io/src/core/utils/*"]
    }
  },
  "include": ["src", "node_modules/nfewizard-io/src"]
}
